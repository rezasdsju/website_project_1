    <script>
        // Load menu
        fetch("menu.html")
            .then(response => response.text())
            .then(data => {
                document.getElementById("menu-container").innerHTML = data;
                
                const hamburger = document.querySelector('.hamburger');
                const navMenu = document.querySelector('.nav-menu');
                
                if (hamburger && navMenu) {
                    hamburger.addEventListener('click', () => {
                        navMenu.classList.toggle('active');
                        
                        const icon = hamburger.querySelector('i');
                        if (navMenu.classList.contains('active')) {
                            icon.classList.remove('fa-bars');
                            icon.classList.add('fa-times');
                        } else {
                            icon.classList.remove('fa-times');
                            icon.classList.add('fa-bars');
                        }
                    });
                }
            });

        // global variable
        let subjects = [];
        let semester = "";
        let studentName = "";
        let overallGPA = "";

        document.addEventListener('DOMContentLoaded', function() {
            // লোকাল স্টোরেজ থেকে ডেটা লোড করা
            studentName = localStorage.getItem('studentName');
            semester = localStorage.getItem('semester');
            overallGPA = localStorage.getItem('overallGPA');
            subjects = JSON.parse(localStorage.getItem('subjects'));

            // যদি কোনো ডেটা না থাকে, তাহলে একটি মেসেজ দেখানো
            if (!studentName || !subjects || subjects.length === 0) {
                document.body.innerHTML = `
                    <div id="menu-container"></div>
                    <div class="error-container">
                        <h1 class="error-title">No result data found</h1>
                        <p>Please go back and create a result sheet first.</p>
                        <div style="margin-top: 20px;">
                            <a href="school_mark_input.html" class="btn btn-primary">
                                <i class="fas fa-arrow-left"></i> Go Back
                            </a>
                        </div>
                    </div>
                `;
                
                // Load menu in error container
                fetch("menu.html")
                    .then(response => response.text())
                    .then(data => {
                        document.getElementById("menu-container").innerHTML = data;
                    });
                return;
            }

            // HTML এলিমেন্টগুলোতে ডেটা দেখানো
            document.getElementById('student-name-header').textContent = studentName;
            document.getElementById('overall-gpa').textContent = `Overall GPA: ${overallGPA}`;

            const tableBody = document.getElementById('result-table-body');
            tableBody.innerHTML = '';

            // প্রতিটি সাবজেক্টের জন্য একটি করে রো তৈরি করা
            subjects.forEach(subject => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${subject.name}</td>
                    <td>${subject.mark}</td>
                    <td>${subject.sub_full_mark}</td>
                    <td>${semester}</td>
                    <td>${subject.grade}</td>
                    <td>${subject.gpa.toFixed(2)}</td>
                `;
                tableBody.appendChild(row);
            });
        });

        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            // Add header with styling
            doc.setFillColor(44, 62, 80);
            doc.rect(0, 0, 220, 30, 'F');
            doc.setFontSize(20);
            doc.setTextColor(255, 255, 255);
            doc.text("STUDENT RESULT", 105, 17, { align: 'center' });
            
            // Reset text color
            doc.setTextColor(0, 0, 0);
            
            // Student Info যোগ করা
            doc.setFontSize(14);
            doc.setTextColor(67, 203, 255);
            doc.text("Student Name:", 14, 45);
            doc.setTextColor(0, 0, 0);
            doc.text(studentName, 50, 45);
            
            doc.setTextColor(67, 203, 255);
            doc.text("Semester:", 14, 55);
            doc.setTextColor(0, 0, 0);
            doc.text(semester, 50, 55);
            
            doc.setTextColor(67, 203, 255);
            doc.text("Overall GPA:", 14, 65);
            doc.setTextColor(0, 0, 0);
            doc.text(overallGPA, 50, 65);
            
            // Add a line separator
            doc.setDrawColor(67, 203, 255);
            doc.line(14, 70, 196, 70);

            // Table data তৈরি
            const tableData = subjects.map(subject => [
                subject.name,
                subject.mark,
                subject.sub_full_mark,
                semester,
                subject.grade,
                subject.gpa.toFixed(2)
            ]);

            // হেডার
            const headers = [["Subject", "Mark", "Full Mark", "Semester", "Grade", "GPA"]];

            // AutoTable ব্যবহার
            doc.autoTable({
                head: headers,
                body: tableData,
                startY: 75,
                theme: 'grid',
                headStyles: {
                    fillColor: [67, 203, 255],
                    textColor: [255, 255, 255],
                    fontStyle: 'bold'
                },
                alternateRowStyles: {
                    fillColor: [240, 240, 240]
                },
                margin: { top: 75 }
            });

            // Add footer
            const pageCount = doc.internal.getNumberOfPages();
            for (let i = 1; i <= pageCount; i++) {
                doc.setPage(i);
                doc.setFontSize(10);
                doc.setTextColor(100, 100, 100);
                doc.text(`Page ${i} of ${pageCount}`, 105, 285, { align: 'center' });
                doc.text("Generated by RTI Result System", 105, 290, { align: 'center' });
            }

            // PDF download
            doc.save(`${studentName}_Result_Sheet.pdf`);
        }
    </script>
</body>
</html>
