                        </tr>
                    </thead>
                    <tbody id="result-table-body">
                    </tbody>
                </table>
                
                <div class="action-buttons">
                    <div class="exp-pdf">
                        <a href="#" class="btn btn-primary" onclick="downloadPDF()">
                            <i class="fas fa-download"></i> Export PDF
                        </a>
                    </div>
