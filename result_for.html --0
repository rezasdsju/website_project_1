    <div id="menu-container"></div>

    <div class='container'>
        <h1>Select Result Sheet Type</h1>
        <a href='school_result_input.html' class='option-button'>
            <i class="fas fa-school"></i>
            Result Sheet for School
        </a>
        <a href='#' class='option-button'>
            <i class="fas fa-university"></i>
